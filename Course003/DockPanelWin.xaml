<Window
    x:Class="Course003.DockPanelWin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Course003"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DockPanelWIn"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <!--  DockPanel和Winform中的Panel属性中的Dock类似，默认值是向左排列，也就是DockPanel.Dock="Left"，最后一个占满剩下的空间  -->
        <!--  LastChildFill默认为True  -->
        <!--  和顺序有关 按照顺序将剩下的布局进行操作  -->
        <!--  Alt+上下箭头  切换行顺序  -->
        <Button Content="Buttn2" DockPanel.Dock="Left" />
        <Button Content="Buttn1" DockPanel.Dock="Top" />
        <Button Content="Buttn3" DockPanel.Dock="Right" />
        <Button Content="Buttn4" DockPanel.Dock="Bottom" />
        <Button Content="Buttn5" />
    </DockPanel>
</Window>
